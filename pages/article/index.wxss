/* pages/article/index.wxss */

.container {
  background-color: #f6f6f6;
}

.swiper-tab {
  width: 100%;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.tab-item {
  width: 140rpx;
  font-size: 30rpx;
  display: inline-block;
  color: #333;
}

.on {
  color: #ef4836;
}

.swiper {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper .article_mask {
  text-align: center;
  padding: 0 20rpx;
  background-color: #fff;
}

swiper-item {
  padding-top: 20rpx;
}

.article_item {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0rpx 40rpx;
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd;
}

.choose_box {
  width: 46rpx;
  height: 46rpx;
  position: relative;
  border: 1rpx solid #9b9b9b;
  border-radius: 50%;
  -webkit-border-radius: 50%;
}
.no_border{
  border: none;
}
.choose_box>icon{
  position: absolute;
  top: 0;
  left: 0;
}
.article_text{
  padding-left: 20rpx;
}

.no_history{
  display: block;
  font-size: 30rpx;
  text-align: center;
  color: #adadad;
}