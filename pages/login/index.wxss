/**index.wxss**/

page, .container {
  width: 100%;
  height: 100%;
}

.container {
  position: relative;
}

/* ---------------------- */

.apply_mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.apply_mask>image {
  display: block;
  width: 480rpx;
  height: 541rpx;
  margin: 200rpx auto 0;
}

.contact {
  display: block;
  width: 100%;
  position: absolute;
  top: 640rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ef4836;
}
.fix_info{
  display: block;
  width: 365rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ef4836;
  border-radius: 30rpx;
  position: absolute;
  top: 600rpx;
  left: 200rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}

.close {
  position: absolute;
  top: 745rpx;
  left: 45%;
}

.bg_img {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.bg_img>image {
  display: block;
  width: 100%;
  height: auto;
}

.join_con {
  width: 100%;
  position: absolute;
  top: 800rpx;
}

.join_btn {
  width: 90%;
  line-height: 90rpx;
  background-color: #ef4836;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  margin: 0rpx auto;
}

.to_shop {
  display: block;
  width: 156rpx;
  height: 36rpx;
  position: fixed;
  bottom: 85rpx;
  right: 95rpx;
  color: #ef4836;
}

/* ------------------------ */

/* 多店铺 */

.shop_lists_con {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
}

.shop_lists {
  width: 500rpx;
  height: 414rpx;
  position: absolute;
  top: 270rpx;
  left: 16%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background: #f1f1f1;
  border-radius: 10rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}

.dp_name {
  width: 180rpx;
  font-size: 16px;
  word-break: keep-all; 
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis;
  margin-right: 10rpx;
  text-align:left;

}

.lists_tit {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 50rpx;
}

.lists_tit>view {
  width: 40%;
}

.shop_item {
  font-size: 30rpx;
  text-align: center;
  padding: 20rpx 0rpx;
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
  color: #706565;
}

.shop_item icon {
  margin-right: 30rpx;
  margin-left:20rpx;

}

.keep_apply {
  width: 200rpx;
  height: 75rpx;
  line-height: 75rpx;
  margin: 0 auto;
  background: #ef4836;
  color: #fff;
  border-radius: 15rpx;
  font-size: 28rpx;
  text-align: center;
}
.myd{
  display: block;
  font-size: 28px;
  padding-bottom:5px; 
  text-align: center;
  border-bottom:1px solid #d8d8d8;

}

.lists_bg {
  display: block;
  width: 480rpx;
  height: 414rpx;
  position: absolute;
  top: 160rpx;
  left: 18%;
}
.blue{
  font-size:12px;
color:#2e83ff;

}