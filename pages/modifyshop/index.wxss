/* pages/apply/index.wxss */

.container {
  overflow-x: hidden;
  background: #f6f6f6;
}

.shop_info {
  width: 100%;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  background-color: #fff;
}

.placeholder_class {
  text-align: right;
}

.container :nth-child(1) {
  margin-top: 0rpx;
}

.info_item {
  width: 100%;
  height: 88rpx;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  font-size: 16px;
  border-bottom: 1rpx solid #e8e8e8;
}
.address_item{
  height: auto;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  padding-top: 30rpx;
}
.describe_item{
  height: auto;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  padding-top: 30rpx;
}
.info_item>input {
  display: block;
  max-width: 45%;
  text-align: right;
}

.sh_lb {
  width: 100%;
  font-size: 17px;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e8e8e8;
}

.lb_con {
  padding: 20rpx 0rpx 0rpx 0rpx;
  box-sizing: border-box;
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
}

.lb_item {
  padding: 10rpx;
  margin: 0rpx 18rpx 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.lb_item_selected {
  color: #090;
  border-color: #090;
}

