/* pages/article/index.wxss */

.container {
  background-color: #f6f6f6;
}

.swiper-tab {
  width: 100%;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  padding: 0rpx 40rpx 0rpx 215rpx;
  box-sizing: border-box;
  background: #fff;
  justify-content: space-between;
}

.tab-item {
  width: 140rpx;
  font-size: 30rpx;
  display: inline-block;
  color: #333;
}

.on {
  color: #ef4836;
}

.swiper {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

swiper-item {
  padding-top: 20rpx;
}

.qr_code_con{
  width: 34rpx;
  height: 34rpx;
  overflow: hidden;
}
.qr_code_con>image{
  display: block;
  width: 100%;
}

.on_line_item{
  width: 100%;
  position: relative;
}
.shop_item{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  margin-top: 20rpx;
}

.shop_img_info{
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}

.shop_item_img{
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
}
.shop_info{
  margin-left: 20rpx;
}
.shop_name{
  display: block;
  font-size: 30rpx;
}
.shop_specifications{
  display: block;
  font-size: 24rpx;
  color: #adadad;
}
.shop_item_change_css{
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: flex-start;
  -webkit-align-items: flex-start;
}

.buy_iofo{
  width: 100%;
}
.buy_iofo text{
  display: block;
  text-align: right;
}
.price{
  font-size: 30rpx;
}
.original_price{
  font-size: 24rpx;
  color: #999;
  text-decoration:line-through;
}
.count{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.real_pay{
  font-size: 30rpx;
  margin-top: 50rpx;
}
.cancel_con{
  width: 100%;
  padding: 25rpx 0rpx 10rpx 260rpx;
  box-sizing: border-box;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  border-top: 1rpx solid #ddd;
}
.tk_text{
  font-size: 24rpx;
  color: #999;
}
.deal_with{
  width: 128rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #ef4836;
  font-size: 24rpx;
  color: #fff;
  padding: 0;
  margin: 0;
}
.no_shop{
  display: block;
  font-size: 30rpx;
  text-align: center;
  color: #666;
}