/* pages/reject/index.wxss */
page, .container{
  background-color: #f6f6f6;
}
.shop_item{
  box-sizing: border-box;
  background-color: #fff;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  margin-top: 20rpx;
}
.title{
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #666;
}
.shop_img_info{
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}

.shop_item_img{
  width: 138rpx;
  height: 138rpx;
  margin-left: 20rpx;
}
.shop_info{
  margin-left: 20rpx;
}
.shop_name{
  display: block;
  width: 360rpx;
  font-size: 24rpx;
}

.shop_item_change_css{
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  margin-bottom: 25rpx;
  border-top: 1rpx solid #ddd;
  padding: 30rpx 20rpx;
}

.buy_iofo{
  width: 100%;
}
.buy_iofo text{
  display: block;
  text-align: right;
}
.price{
  font-size: 30rpx;
  color: #ef4836;
}
.count{
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}
/* ----------------- */
.info_item{
  width: 100%;
  height: 88rpx;
  padding: 0rpx 30rpx; 
  box-sizing: border-box;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  font-size: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e8e8e8;
}
.flex_start{
  justify-content: flex-start;
  -webkit-justify-content: flex-start;
}
.info_item input{
  width: 450rpx;
  text-align: left;
}
.placeholder_class{
  text-align: right;
}
.placeholder_class_left{
  text-align: left;
}
.m_top_20{
  margin-top: 20rpx;
}
/* --------------- */
/* 上传凭证 */
.shop_img{
  width: 100%;
  padding: 20rpx 30rpx 50rpx 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  background-color: #fff;
}
.shop_img_box{
  width: 100%;
  margin-top: 30rpx;
  justify-content:flex-start;
  -webkit-justify-content:flex-start;
  flex-wrap: wrap;
  -webkit-flex-wrap: wrap;
}
.shop_img_item{
  height: 164rpx;
  width: 164rpx;
  background: #f0f0f0;
  margin-left: 9rpx;
  margin-bottom: 9rpx;
  overflow: hidden;
}
.shop_img_item>image{
  width: 100%;
  height: 164rpx;
}

.submit_btn{
  display: block;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ef4836;
  color: #fff;
  font-size: 42rpx;
  text-align: center;
}