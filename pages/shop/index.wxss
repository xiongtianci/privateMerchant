  border-radius: 10rpx;
  font-size: 13px;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.cancle {
  display: block;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  z-index: 2;
  opacity: 2;
}

.ok_btn {
  display: block;
  width: 475rpx;
  height: 75rpx;
  line-height: 75rpx;
  background: #ef4836;
  color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  text-align: center;
  font-size: 14px;
  margin-top: 60rpx;
}

.change_info {
  margin-top: 50rpx;
}

.dyBg {
  position: absolute;
  width: 560rpx;
