.container {
  overflow-x: hidden;
  background: #fff;
}
.shop_item>view{
  width: 80%;
  text-align: right;
  text-overflow: ellipsis;
}

.shop_info {
  width: 100%;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  margin-top: 32rpx;
  background-color: #fff;
}

.info_item {
  font-size: 30rpx;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

.info_item {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  font-size: 32rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.telText{
  padding: 20px;
  font-size: 28rpx;
  background-color: #fff;
  margin-bottom: 200rpx;
}
